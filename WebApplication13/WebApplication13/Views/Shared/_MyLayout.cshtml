@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row" id="login">
    <div class="col-md-12">
        <div class="card" id="myLists">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Movies/Oldest'>Oldest movies on your list</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Movies/Newest'>Newest movies on your list</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Movies/SearchYear'>Movies from 1976</a>
                    </li>
                </ul>

            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)

    <script>
    $(function (){
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) != -1) {
                $this.addClass('active');
            }
        })
    })
    </script>
}
